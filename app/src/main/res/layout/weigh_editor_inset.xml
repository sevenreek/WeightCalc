<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:layout_gravity="center"
    android:layout_margin="2dp"
    android:background="@drawable/ui_element_bgrnd_9p"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/weightedit_less"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="?selectableItemBackground"
        android:clickable="true"
        android:alpha="0.3"
        app:srcCompat="@drawable/ic_remove_circle_outline_black_24dp" />

    <TextView
        android:id="@+id/weightedit_text1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:scrollHorizontally="true"
        android:text="20kg bar"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:textAlignment="center"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/weightedit_text2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="1x25.0kg"
        android:ellipsize="marquee"
        android:scrollHorizontally="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:textAlignment="center"
        android:textSize="14dp" />

    <TextView
        android:ellipsize="marquee"
        android:id="@+id/weightedit_text3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="TextView"
        android:scrollHorizontally="true"
        android:textAlignment="center"
        android:textSize="14dp" />

    <ImageView
        android:id="@+id/weightedit_more"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:alpha="0.3"
        android:background="?selectableItemBackground"
        android:clickable="true"

        app:srcCompat="@drawable/ic_add_circle_outline_black_24dp" />

</LinearLayout>