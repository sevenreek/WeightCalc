<?xml version="1.0" encoding="utf-8"?>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/create_horizontalExerciseContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/lightGrayBackground"
                    android:orientation="horizontal"
                    android:paddingLeft="92dp"
                    android:paddingRight="92dp">

                </LinearLayout>
            </HorizontalScrollView>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginBottom="2dp"
                android:background="@drawable/ui_element_bgrnd_9p"

                android:elevation="1dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.75">

                    <ImageView
                        android:layout_marginTop="1dp"
                        android:id="@+id/imageView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:alpha="0.35"
                        app:srcCompat="@drawable/ic_delete_black_24dp" />

                </FrameLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/darkGrayBackground"

                    android:gravity="center_vertical"
                    android:text="Reps to do"
                    android:textAlignment="center"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.45"
                    android:gravity="center_vertical"
                    android:text="Rest time"
                    android:textAlignment="center"
                    android:textSize="20sp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/create_verticalContainer"
                android:animateLayoutChanges="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"></LinearLayout>

            <ImageButton
                android:id="@+id/create_addSet"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:alpha="0.25"
                android:layout_gravity="center"
                android:background="@null"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/ic_add_circle_outline_black_24dp" />

        </LinearLayout>
    </ScrollView>


