<?xml version="1.0" encoding="utf-8"?>




<LinearLayout
    android:id="@+id/homeContainer"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <android.support.constraint.ConstraintLayout
        android:id="@+id/currentExerciseContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/darkestTheme">

        <TextView
            android:id="@+id/currentRoutineLabelTextView"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="CURRENT ROUTINE:"
            android:textAllCaps="true"
            android:textColor="@color/fontLight"
            app:layout_constraintEnd_toStartOf="@+id/startExerciseButtonContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/currentRoutine"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="STRONGLIFTS"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/currentRoutineLabelTextView" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="0dp"
            android:layout_height="19dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:text="CURRENT DAY:"
            android:textAllCaps="true"
            android:textColor="@color/fontLight"
            app:layout_constraintEnd_toStartOf="@+id/startExerciseButtonContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/currentRoutine"
            app:layout_constraintVertical_chainStyle="spread" />

        <TextView
            android:id="@+id/currentDay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="DAY 3 - LEGS"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <FrameLayout
            android:id="@+id/startExerciseButtonContainer"
            android:layout_width="96dp"
            android:layout_height="0dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:clipChildren="false"
            android:clipToPadding="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ProgressBar
                android:id="@+id/currentExerciseProgressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="108dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:max="100"

                android:padding="-8dp"
                android:progress="75"
                android:progressDrawable="@drawable/circular_progress_bar" />

            <Button
                android:id="@+id/goButton"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:background="@drawable/white_disk"
                android:text="GO!"
                android:textColor="@color/accentOrange"
                android:textSize="32dp" />

        </FrameLayout>

        <ImageButton
            android:id="@+id/changeCurrentDay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="4dp"
            android:background="@null"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/currentDay"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:srcCompat="@drawable/ic_swap_horiz" />

        <ImageButton
            android:id="@+id/changeCurrentRoutine"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:background="@null"
            app:layout_constraintBottom_toTopOf="@+id/textView3"
            app:layout_constraintStart_toEndOf="@+id/currentRoutine"
            app:layout_constraintTop_toBottomOf="@+id/currentRoutineLabelTextView"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/ic_swap_horiz" />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/prevExerciseContainer"
        android:layout_width="match_parent"
        android:layout_marginTop="16dp"
        android:layout_height="wrap_content"
        android:background="@color/darkTheme">

        <TextView
            android:id="@+id/currentRoutineLabelTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="LAST EXERCISE:"
            android:textAllCaps="true"
            android:textColor="@color/fontLight"
            android:textSize="12dp"
            app:layout_constraintEnd_toStartOf="@+id/editLastDay"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/currentRoutine"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:text="STRONGLIFTS"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="22dp"
            app:layout_constraintEnd_toStartOf="@+id/editLastDay"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/currentRoutineLabelTextView" />

        <TextView
            android:id="@+id/lastDay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:text="DAY 3 - LEGS"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="16dp"
            app:layout_constraintBottom_toTopOf="@+id/textView6"
            app:layout_constraintEnd_toStartOf="@+id/editLastDay"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/currentRoutine" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:text="Completion"
            android:textAlignment="textStart"
            android:textAllCaps="true"
            android:textSize="18dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/lastDayCompletionPercentage"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/lastDayCompletionPercentage"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:text="100%"
            android:textAlignment="textEnd"
            android:textAllCaps="true"
            android:textSize="18dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/expandLastDay" />

        <ImageButton
            android:id="@+id/expandLastDay"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:background="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/ic_drop_down_black" />

        <ImageButton
            android:id="@+id/editLastDay"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:background="@null"
            app:layout_constraintBottom_toTopOf="@+id/textView6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_edit_white" />

    </android.support.constraint.ConstraintLayout>

</LinearLayout>
