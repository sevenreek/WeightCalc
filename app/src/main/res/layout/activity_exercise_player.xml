<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/progressText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:elevation="2dp"
        android:gravity="center"
        android:text="1:20"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/progressBar"
        app:layout_constraintLeft_toLeftOf="@id/progressBar"
        app:layout_constraintRight_toRightOf="@id/progressBar"
        app:layout_constraintTop_toTopOf="@id/progressBar" />

    <TextView
        android:id="@+id/prevExercise"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:elevation="2dp"
        android:text="BENCH PRESS"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:translationZ="1dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/currentExercise"
        app:layout_constraintBottom_toBottomOf="@id/topBarContainer"
        app:layout_constraintTop_toBottomOf="@id/prevExerciseButton"
        tools:layout_editor_absoluteX="36dp"
        tools:layout_editor_absoluteY="189dp" />

    <ImageView
        android:id="@+id/prevExerciseButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:translationZ="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/topBarContainer"
        app:layout_constraintLeft_toLeftOf="@+id/topBarContainer"
        app:layout_constraintTop_toTopOf="@+id/topBarContainer"
        app:srcCompat="@drawable/ic_chevron_left_white"
        android:layout_marginLeft="16dp"

        android:layout_marginBottom="24dp"/>

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/darkestTheme"
        android:elevation="4dp"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/nextExercise"
        android:elevation="2dp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="TextView"

        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/topBarContainer"
        app:layout_constraintLeft_toRightOf="@id/currentExercise"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nextExerciseButton"
        tools:layout_editor_absoluteX="0dp" />

    <ImageView
        android:id="@+id/nextExerciseButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:translationZ="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/topBarContainer"
        app:layout_constraintRight_toRightOf="@+id/topBarContainer"
        app:layout_constraintTop_toTopOf="@+id/topBarContainer"
        app:srcCompat="@drawable/ic_chevron_right_white"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="24dp"
        />

    <TextView
        android:id="@+id/currentExercise"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:elevation="2dp"
        android:gravity="center"
        android:text="Squat"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="@id/topBarContainer"
        app:layout_constraintRight_toRightOf="@id/topBarContainer"
        app:layout_constraintTop_toTopOf="@id/topBarContainer"
        tools:layout_weight="1" />


    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/currentExercise"
        app:layout_constraintBottom_toBottomOf="@id/topBarContainer"
        app:layout_constraintLeft_toRightOf="@id/prevExercise"
        app:layout_constraintRight_toLeftOf="@id/nextExercise"
        android:elevation="2dp"

        android:indeterminate="false"
        android:progressDrawable="@drawable/circular_progress_bar"
        android:background="@drawable/circle_shape"
        android:max="100"
        android:progress="95"
        app:layout_constraintDimensionRatio="1:1"
        />

    <ProgressBar
        android:id="@+id/timerBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:elevation="2dp"
        android:indeterminate="false"
        android:max="10000"
        android:progress="45"

        android:progressDrawable="@drawable/circular_timer_bar"
        app:layout_constraintBottom_toBottomOf="@id/topBarContainer"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintLeft_toRightOf="@id/prevExercise"
        app:layout_constraintRight_toLeftOf="@id/nextExercise"
        app:layout_constraintTop_toBottomOf="@id/currentExercise" />

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="112dp"
        android:paddingLeft="80dp"
        android:paddingRight="80dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        android:id="@+id/topBarContainer"
        android:background="@drawable/blue_rectangle">


    </FrameLayout>


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        android:clickable="true"
        app:backgroundTint="@color/accentOrange"
        app:fabSize="mini"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/ic_add_white"
        android:layout_marginEnd="16dp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/listView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:paddingBottom="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topBarContainer"
        tools:layout_constraintBottom_creator="1"
        tools:listitem="@layout/builder_set"
        app:layout_constraintVertical_bias="0.5" >

    </android.support.v7.widget.RecyclerView>

</android.support.constraint.ConstraintLayout>