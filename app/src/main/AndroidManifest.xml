<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.devseven.gympack.setlogger">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity
            android:name="com.devseven.gympack.setlogger.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.devseven.gympack.setlogger.WeightCalculator" android:screenOrientation="portrait" />
        <activity android:name="com.devseven.gympack.setlogger.ExerciseActivity" android:screenOrientation="portrait"  />
        <activity android:name="com.devseven.gympack.setlogger.PickExerciseActivity" android:screenOrientation="portrait"  />
        <activity android:name="com.devseven.gympack.setlogger.CreateProgramActivity" android:screenOrientation="portrait" />
        <activity android:name="com.devseven.gympack.setlogger.LogsActivity" android:screenOrientation="portrait" />
        <activity android:name="com.devseven.gympack.setlogger.ExercisesListActivity" android:screenOrientation="portrait" ></activity>
        <activity android:name="com.devseven.gympack.setlogger.SettingsActivity" android:screenOrientation="portrait" ></activity>
    </application>

</manifest>